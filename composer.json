{
    "name": "drupal-settings/drupal-composer",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Daniel Noyola",
            "email": "daniel.noyola.dev@gmail.com",
            "homepage": "https://daniel.noyola.dev"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.env.php"
        ]
    },
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-settings/basic": "^1.0",
        "drupal/config_split": "^1.4",
        "drupal/core": "~8.8.0",
        "drupal/core-composer-scaffold": "^8.8",
        "drush/drush": "^9.0",
        "symfony/dotenv": "~3.4|~4.3",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "drupal/devel": "^2.0",
        "vijaycs85/drupal-quality-checker": "^1.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "DrupalComposer\\composer\\ScriptHandler::setupProject"
        ]
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "composer-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "web"
            }
        }
    }
}
