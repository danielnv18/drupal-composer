{
    "name": "drupal-settings/drupal-composer",
    "type": "project",
    "description": "Project template for Drupal 8 projects with composer",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Daniel Noyola",
            "email": "daniel.noyola.dev@gmail.com",
            "homepage": "https://daniel.noyola.dev"
        }
    ],
    "require": {
        "php": ">=7.3",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-settings/basic": "^1.7",
        "drupal/config_split": "^1.4",
        "drupal/core": "^9.0.0",
        "drupal/core-composer-scaffold": "^9.0.0",
        "drush/drush": "^10.0.0",
        "kporras07/composer-symlinks": "^0.1.0",
        "vlucas/phpdotenv": "^4.0",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "require-dev": {
        "consolidation/robo": "^2.0",
        "drupal/core-dev": "^9.0.0",
        "drupal/devel": "^2.0",
        "vijaycs85/drupal-quality-checker": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "composer robo setup",
            "@project-scaffold"
        ],
        "post-install-cmd": [
            "@project-scaffold"
        ],
        "project-scaffold": [
            "Kporras07\\ComposerSymlinks\\ScriptHandler::createSymlinks"
        ],
        "robo": "robo --ansi --load-from $(pwd)/scripts/php/Tasks.php"
    },
    "autoload": {
        "files": [
            "load.env.php"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "build/html"
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "build/html/core": [
                "type:drupal-core"
            ],
            "build/html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "build/html/libraries/{$name}": [
                "type:drupal-library"
            ],
            "build/html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "build/html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "build/html/drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "symlinks": {
            "src/modules": "build/html/modules/custom",
            "src/themes": "build/html/themes/custom",
            "src/profiles": "build/html/profiles/custom",
            "src/libraries": "build/html/libraries/custom",
            "src/sites/default": "build/html/sites/default",
            "src/sites/settings.common.php": "build/html/sites/settings.common.php"
        }
    }
}
